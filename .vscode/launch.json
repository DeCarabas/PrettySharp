{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"],
      "outFiles": ["${workspaceFolder}/editors/vscode/out/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/editors/vscode",
        "--extensionTestsPath=${workspaceFolder}/editors/vscode/out/test"
      ],
      "outFiles": ["${workspaceFolder}/editors/vscode/out/test/**/*.js"],
      "preLaunchTask": "npm: watch"
    }
  ]
}
